<div class="container mt-5" style='min-height: 66vh'>

    <div class="card">
      <div class="card-header p-3">
        Register
      </div>
      <div class="card-body p-3">
        <form action="register" method="post" class='p-4'>
          <div class="form-group my-3">
            <label class='my-2' for="full_name">Full name</label>
            <input required type="text" name="full_name" class="form-control" id="full_name" placeholder="Enter full_name">
          </div>
          <div class="form-group my-3">
            <label class='my-2' for="email">Email</label>
            <input required type="text" name="email" class="form-control" id="email" placeholder="Enter email">
          </div>
          <div class="form-group my-3">
            <label  class='my-2' for="password1">Password</label>
            <input required type="password" name='password1' class="form-control" id="password1" placeholder="Enter password">
          </div>
            <div class="form-group my-3">
            <label  class='my-2' for="password2">Password</label>
            <input required type="password" name='password2' class="form-control" id="password" placeholder="Enter repeat password">
          </div>
          <button type="submit" class="btn btn-primary my-3">Register</button>    
          <span class='fw-bolder text-danger'> {{#error}} {{error}} {{/error}} </span>
        </form>
      </div>
    </div>
  </div>