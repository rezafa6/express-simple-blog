<div class="container mt-5" style='min-height: 66vh'>

    <div class="card">
      <div class="card-header p-3">
        Login
      </div>
      <div class="card-body p-3">
        <form action="login" method="post" class='p-4'>
          <div class="form-group my-3">
            <label class='my-2' for="email">Email</label>
            <input type="text" name="email" class="form-control" id="email" placeholder="Enter email">
          </div>
          <div class="form-group my-3">
            <label  class='my-2' for="password">Password</label>
            <input type="password" name='password' class="form-control" id="password" placeholder="Enter password">
          </div>
          <button type="submit" class="btn btn-primary my-3">Login</button>    
          <span class='fw-bolder text-danger'> {{#error}} {{error}} {{/error}} </span>
          <a href='register'> Create account </a>
        </form>
      </div>
    </div>
  </div>