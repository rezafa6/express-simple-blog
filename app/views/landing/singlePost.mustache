    {{#post}}
<div class='mt-5 pt-5' style='min-height: 45vh'>
    <div class="d-flex justify-content-center mt-5">

        <div class="col-lg-6 d-flex justify-content-center text-center">
            <div class="card" style="width: 18rem;">
            <img src='/uploads/post-images/{{post_image}}'>
                <p class='fw-bolder ps-3 py-0 m-0 text-start'>
                author :{{full_name}}
                </p>
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">{{slug}}</p>
                </div>
            </div>
        </div>
    </div>
   <div class='d-flex justify-content-center'>
    <p class='col-lg-5 text-center px-5 m-4 border rounded-4'>
        {{content}}
    </p>
   </div>

    {{/post}}
<hr>
<div class='d-flex w-100 border p-4 rounded-3 justify-content-center my-5 mx-auto'>
    <form class='p-1 mx-5 col-lg-3 form-group'  action="/add-comment/{{id}}" method="post">
    <span class='fw-bolder'>  {{# message}} {{message}} {{/ message}} </span>
    <p>add comment</p>
    <label for="email">Enter email</label>
    <input class='form-control m-3' type="mail" name="email">
    <label for="comment">Enter comment</label>
    <input class='form-control m-3' type="text" name="comment">  
    <button class='btn btn-success m-3' type="submit">submit</button>
    </form>

    <div style='max-height: 65vh' class='col-lg-4 overflow-auto border rounded-3 p-3 mx-2 my-5' >
    <p 
    style='top:0'
    class='fw-bolder position-sticky text-center bg-light rounded-3 p-2'> comments list  <p>
    {{#comments}}
    <div class="border my-2 border-info w-100 rounded-2 p-2">
      <div class="panel-heading border-info border-bottom p-2">
      EMAIL: @{{email}}
      |
      {{created_at_persian}}
      </div>
      <div class="panel-body p-2">{{comment}}</div>
      <button class='btn text-info border border-info font-12'> answer </button>
    </div>
    {{/comments}}
    </div>
</div>

</div>

