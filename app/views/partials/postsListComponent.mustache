<div class="row justify-content-center">
    {{#posts}}
    <div class="col-md-6 col-lg-3 mb-5">
        <div class="card" style="width: 18rem;">
            <p class='fw-bolder ps-3 py-0 m-0 text-start'>
                author: {{full_name}}
            </p>
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{slug}}</p>
                <a href="single-post/{{id}}" class="btn btn-primary">Go to post</a>
            </div>
        </div>
    </div>
    {{/posts}}
</div>